# Railway Environment Variables Configuration
# Copy this file to railway.env and fill in your actual values

# Email Configuration (REQUIRED for email notifications)
# Option 1: Gmail SMTP
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=hackintoshandbeyond@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here
FROM_EMAIL=hackintoshandbeyond@gmail.com

# Option 2: SendGrid (RECOMMENDED for Railway)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Railway Detection
RAILWAY_ENVIRONMENT=production

# Payment Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# PIX Configuration (if using PIX provider)
PIX_PROVIDER_API_KEY=your_pix_provider_api_key
PIX_PROVIDER_SECRET=your_pix_provider_secret
PIX_WEBHOOK_SECRET=your_pix_webhook_secret

# Application Configuration
ALLOWED_ORIGINS=https://web-production-1513a.up.railway.app,http://localhost:8000
SUCCESS_URL=https://web-production-1513a.up.railway.app/success
CANCEL_URL=https://web-production-1513a.up.railway.app/cancel
WEBHOOK_URL=https://web-production-1513a.up.railway.app/api/webhook

# Debug Configuration
DEBUG=false